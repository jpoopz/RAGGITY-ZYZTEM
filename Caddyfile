# Replace yourdomain.com with your actual domain or VPS IP
yourdomain.com {
    encode gzip
    reverse_proxy rag-system:8000
    log {
        output file /data/access.log
    }
    tls {
        # Automatic Let's Encrypt certificate provisioning
        on_demand
    }
}

# Optional HTTP redirect
http://yourdomain.com {
    redir https://yourdomain.com{uri}
}


