# RAGGITY ZYZTEM 2.0 - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# LLM Provider Configuration
# ============================================

# Provider: "ollama" (local) or "openai" (cloud)
LLM_PROVIDER=ollama

# Model names
LLM_MODEL=llama3.2
EMBEDDING_MODEL=nomic-embed-text

# Ollama settings
OLLAMA_HOST=http://localhost:11434

# OpenAI settings (ONLY if LLM_PROVIDER=openai)
# Get your API key from: https://platform.openai.com/api-keys
# NEVER commit this key to git!
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# Generation Settings
# ============================================

# Temperature (0.0 = deterministic, 1.0 = creative)
TEMP=0.3

# Max tokens (0 = unlimited)
LLM_MAX_TOKENS=0

# Timeout in seconds
LLM_TIMEOUT=120

# ============================================
# Vector Store Configuration
# ============================================

# Vector store backend: "faiss" or "chroma"
VECTOR_STORE=faiss

# Data directories
DATA_DIR=data
VECTOR_DIR=vectorstore
CHROMA_DIR=.chromadb

# ============================================
# Cloud Bridge (Optional)
# ============================================

# Enable hybrid mode for cloud query delegation
HYBRID_MODE=1

# Cloud bridge endpoint
CLOUD_URL=https://your-vps.example.com/api

# Cloud bridge authentication key
# NEVER commit this key to git!
CLOUD_KEY=your-secret-key-here

# ============================================
# CLO 3D Integration (Optional)
# ============================================

# CLO bridge listener settings
CLO_HOST=127.0.0.1
CLO_PORT=51235
CLO_TIMEOUT=10
CLO_BRIDGE_ENABLED=1

# ============================================
# API Server Settings
# ============================================

# API host and port
API_HOST=127.0.0.1
API_PORT=8000

# CORS allowed origins (comma-separated)
# Default: localhost only for security
CORS_ORIGINS=http://localhost,http://127.0.0.1,http://localhost:8000,http://127.0.0.1:8000

# API authentication (optional)
# If set, require Bearer token for sensitive endpoints
API_KEY=

# ============================================
# Logging
# ============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# ============================================
# Development Settings
# ============================================

# Environment name (for telemetry)
ENV=development

# Enable debug mode
DEBUG=0

# ============================================
# Notes
# ============================================
# 
# - Environment variables take precedence over config.yaml
# - Sensitive keys (OPENAI_API_KEY, CLOUD_KEY, API_KEY) should ONLY be set via .env
# - Never commit .env to version control
# - Use env.sample as a template
# - Restart API and UI after changing environment variables
#

